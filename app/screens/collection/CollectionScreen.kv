#: import EditableThreeLineItemList components.components.EditableThreeLineItemList
#: import RV components.components.RV
#: include components/components.kv


<CollectionScreen>:
    name: 'collection_scr'
    MDFloatLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .375}
            size_hint: .85, .90

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height

                SelectListScreenButton:
                    id: my_lists_btn
                    text: 'My Lists'
                    on_release: root.switch_scr(self)

                Spacer:
                    orientation: 'horizontal'
                    value: self.parent.width * 0.01

                SelectListScreenButton:
                    id: all_lists_btn
                    text: 'All Lists'
                    on_release: root.switch_scr(self)

            MDScreenManager:
                id: collections_manager
                UserCollectionScr:
                AllCollectionScr:

            MDLabel:
                text: ''
                size_hint_y: .25


<SelectListScreenButton@MDRectangleFlatButton>:
    radius: [0, 0, 0, 0]
    line_color: app.theme_cls.primary_dark
    size_hint_x: None
    width: self.parent.width * 0.49
    md_bg_color_disabled: app.theme_cls.primary_light
    font_style: 'Body2'
    disabled_color: 'black'
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color


<AllCollectionScr>:
    name: 'all_collection_scr'
    select_list: lambda x: app.change_screen_to_list_scr(x)
    MDFloatLayout:
        size_hint_y: .85
        RV:
            viewclass: 'EditableThreeLineItemList'
            id: rv_collection

<UserCollectionScr>:
    name: 'usr_collection_scr'
    select_list: lambda x: app.change_screen_to_list_scr(x)
    MDFloatLayout:
        size_hint_y: .85
        RV:
            viewclass: 'EditableTwoLineItemList'
            id: rv_usr_collection


