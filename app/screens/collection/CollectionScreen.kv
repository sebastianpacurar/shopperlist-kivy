#: import USER_COLLECTION_SCR utils.constants.USER_COLLECTION_SCR
#: import ALL_COLLECTION_SCR utils.constants.ALL_COLLECTION_SCR


<CollectionScreen>:
    name: 'collection_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)

            MDSegmentedButton:
                type: 'small'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(USER_COLLECTION_SCR)
                    active: True
                    MDSegmentButtonLabel:
                        text: 'My Lists'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(ALL_COLLECTION_SCR)
                    MDSegmentButtonLabel:
                        text: 'All Lists'

            #TODO: continue here

            SimpleTextField:
                id: text_field
                hint_txt: 'Search List'
                size_hint_x: .8
                pos_hint: {'center_x': .5}
#                on_text: root.display_search_results(self.text)

            MDScreenManager:
                id: collections_manager
                UserCollectionScr:
                AllCollectionScr:

            BottomGap:


<AllCollectionScr>:
    name: 'all_collection_scr'
    MDFloatLayout:
        RV:
            viewclass: 'EditableTwoLineItemList'
            id: rv_collection

<UserCollectionScr>:
    name: 'usr_collection_scr'
    MDFloatLayout:
        RV:
            viewclass: 'EditableTwoLineItemList'
            id: rv_usr_collection


