#: import EditableThreeLineItemList components.components.EditableThreeLineItemList
#: import RV components.components.RV

#: import USER_COLLECTION_SCR utils.constants.USER_COLLECTION_SCR
#: import ALL_COLLECTION_SCR utils.constants.ALL_COLLECTION_SCR


<CollectionScreen>:
    name: 'collection_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        Widget:
            size_hint_y: None
            height: root.top_bar_height + root.top_bar_height * .25
            minimum_size: self.size

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)

            MDSegmentedButton:
                type:'large'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(USER_COLLECTION_SCR)
                    active: True
                    MDSegmentButtonLabel:
                        text: 'My Lists'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(ALL_COLLECTION_SCR)
                    MDSegmentButtonLabel:
                        text: 'All Lists'

            MDScreenManager:
                id: collections_manager
                UserCollectionScr:
                AllCollectionScr:



<AllCollectionScr>:
    name: 'all_collection_scr'
    MDFloatLayout:
        size_hint_y: .85
        RV:
            viewclass: 'EditableTwoLineItemList'
            id: rv_collection

<UserCollectionScr>:
    name: 'usr_collection_scr'
    MDFloatLayout:
        size_hint_y: .85
        RV:
            viewclass: 'EditableTwoLineItemList'
            id: rv_usr_collection


