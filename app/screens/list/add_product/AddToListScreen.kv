AddToListScreen:

<AddToListScreen>:
    name: 'add_prods_to_list_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)

            SimpleTextField:
                id: text_field
                on_text: root.display_search_results(self)
                hint_txt: 'Search Product'
                size_hint_x: .8
                pos_hint: {'center_x': .5}

            RV:
                id: rv_prod_list
                viewclass: 'TwoLineProdImgListItem'

            BottomGap: