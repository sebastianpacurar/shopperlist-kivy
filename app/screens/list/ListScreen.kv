<ListScreen>:
    name: 'list_content_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height


        FilterTextField:
            id: filter_category_txt
            hint_txt: 'Category'
            prefix_width: dp(80)
            filter_prefix: 'Filter by: '
            filter_suffix: root.category_filter_message
            clear_filter_func: root.clear_filters

        # TODO: continue from here
        Spacer:
            orientation: 'vertical'
            value: dp(20)
        MDGridLayout:
            cols: 2
            size_hint_y: None
            height: self.children[0].height * .25
            md_bg_color: 'cyan'
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height
                MDLabel:
                    id: price_txt
                    text: 'Price'
                    size_hint: None, None
                    height: self.texture_size[1]
                    width: dp(40)
                MDCheckbox:
                    id: price_box
                    pos_hint: {'center_y': .5}
                    on_active: root.set_checkbox_setup(price_txt, *args)
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height
                MDLabel:
                    id: qty_text
                    text: 'Qty'
                    size_hint: None, None
                    height: self.texture_size[1]
                    width: dp(25)
                MDCheckbox:
                    id: qty_box
                    pos_hint: {'center_y': .5}
                    on_active: root.set_checkbox_setup(qty_text, *args)



        Spacer:
            orientation: 'vertical'
            value: dp(24)

        MDTabsPrimary:
            id: tabs
            lock_swiping: True
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_tab_switch: root.switch_scr(*args)
            MDTabsItem:
                MDTabsItemIcon:
                    icon: 'format-list-checks'
                MDTabsItemText:
                    text: f'All ({root.count_all})'
            MDTabsItem:
                MDTabsItemIcon:
                    icon: 'format-list-bulleted-square'
                MDTabsItemText:
                    text: f'In ({root.count_checked})'
            MDTabsItem:
                MDTabsItemIcon:
                    icon: 'format-list-checkbox'
                MDTabsItemText:
                    text: f'Out ({root.count_unchecked})'
            MDDivider:

        MDScreenManager:
            id: list_view_manager
            AllProdsScreen:
                id: all_prods_scr
            InProdsScreen:
                id: in_prods_scr
            OutProdsScreen:
                id: out_prods_scr

        BottomGap:

        
<AllProdsScreen>:
    name: 'all_prods_list_scr'
    MDFloatLayout:
        ResizableRv:
            viewclass: 'RvItemOneLine'
            id: rv_all_prods_list

<InProdsScreen>:
    name: 'in_prods_list_scr'
    MDFloatLayout:
        ResizableRv:
            viewclass: 'RvItemOneLine'
            id: rv_in_prods_list
    
<OutProdsScreen>:
    name: 'out_prods_list_scr'
    MDFloatLayout:
        ResizableRv:
            viewclass: 'RvItemOneLine'
            id: rv_out_prods_list