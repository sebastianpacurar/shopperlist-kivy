ProdScreen:

<ProdScreen>:
    name: 'prod_scr'

    MDBoxLayout:
        size_hint_y: .9
        pos_hint: {'top': .9}
        orientation: 'vertical'

        MDList:
            MDListItem:
                MDListItemHeadlineText:
                    text: 'Image'
                MDListItemLeadingAvatar:
                    source: root.img_path

            MDListItem:
                id: prod_id
                MDListItemHeadlineText:
                    text: 'id'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_name
                MDListItemHeadlineText:
                    text: 'Name'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_category
                MDListItemHeadlineText:
                    text: 'Category'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_unit
                MDListItemHeadlineText:
                    text: 'Unit'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_price
                MDListItemHeadlineText:
                    text: 'Price'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

        MDLabel:
            text: ''