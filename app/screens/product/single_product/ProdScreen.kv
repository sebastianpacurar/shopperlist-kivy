ProdScreen:

<ProdScreen>:
    name: 'prod_scr'

    MDBoxLayout:
        size_hint_y: .9
        pos_hint: {'top': .9}
        orientation: 'vertical'

        MDList:
            TwoLineRightIconListItem:
                id: prod_id
                text: 'id'
                secondary_text: ''
                IconRightWidget:
                    icon: 'pencil-outline'

            TwoLineRightIconListItem:
                id: prod_name
                text: 'Name'
                secondary_text: ''
                IconRightWidget:
                    icon: 'pencil-outline'

            TwoLineRightIconListItem:
                id: prod_category
                text: 'Category'
                secondary_text: ''
                IconRightWidget:
                    icon: 'pencil-outline'

            TwoLineRightIconListItem:
                id: prod_unit
                text: 'Unit'
                secondary_text: ''
                IconRightWidget:
                    icon: 'pencil-outline'

            TwoLineRightIconListItem:
                id: prod_price
                text: 'Price'
                secondary_text: ''
                IconRightWidget:
                    icon: 'pencil-outline'

            OneLineAvatarListItem:
                text: 'Image'
                ImageLeftWidget:
                    source: root.img_path

        MDLabel:
            text: ''