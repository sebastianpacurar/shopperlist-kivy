<ProdScreen>:
    name: 'prod_scr'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDList:
            MDListItem:
                MDListItemHeadlineText:
                    text: 'Image'
                MDListItemLeadingAvatar:
                    source: root.img_path

            MDListItem:
                MDListItemHeadlineText:
                    text: 'id'
                MDListItemSupportingText:
                    text: root.prod_id

            MDListItem:
                MDListItemHeadlineText:
                    text: 'Name'
                MDListItemSupportingText:
                    text: root.prod_name

            MDListItem:
                MDListItemHeadlineText:
                    text: 'Category'
                MDListItemSupportingText:
                    text: root.prod_category

            MDListItem:
                MDListItemHeadlineText:
                    text: 'Unit'
                MDListItemSupportingText:
                    text: root.prod_unit


            MDListItem:
                MDListItemHeadlineText:
                    text: 'Price'
                MDListItemSupportingText:
                    text: root.prod_price

        Widget:
        BottomGap:
