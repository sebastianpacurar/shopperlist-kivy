<ProdScreen>:
    name: 'prod_scr'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDList:
            MDListItem:
                MDListItemHeadlineText:
                    text: 'Image'
                MDListItemLeadingAvatar:
                    source: root.img_path

            MDListItem:
                id: prod_id
                MDListItemHeadlineText:
                    text: 'id'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_name
                MDListItemHeadlineText:
                    text: 'Name'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_category
                MDListItemHeadlineText:
                    text: 'Category'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_unit
                MDListItemHeadlineText:
                    text: 'Unit'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

            MDListItem:
                id: prod_price
                MDListItemHeadlineText:
                    text: 'Price'
                MDListItemSupportingText:
                    text: ''
                MDListItemTrailingIcon:
                    icon: 'pencil-outline'

        BottomGap:
