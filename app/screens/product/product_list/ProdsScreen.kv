#: import TwoLineProdImgListItem components.components.TwoLineProdImgListItem
#: import RV components.components.RV
#: include components/components.kv


<ProdsScreen>:
    name: 'products_list_scr'
    MDFloatLayout:
        size_hint_y: .9

        MDTextField:
            id: text_field
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'top': 1}
            on_text: root.display_search_results(self)
            MDTextFieldHintText:
                text: 'Search Product'

        RV:
            id: rv_prod_list
            pos_hint: {'center_x': .5, 'top': .9}
            size_hint_y: .9
            viewclass: 'TwoLineProdImgListItem'
