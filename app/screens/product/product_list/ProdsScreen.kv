#: import TwoLineProdImgListItem components.components.TwoLineProdImgListItem
#: import RV components.components.RV


<ProdsScreen>:
    name: 'products_list_scr'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        Widget:
            size_hint_y: None
            height: root.top_bar_height + root.top_bar_height * .25
            minimum_size: self.size

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)

            MDTextField:
                mode: 'outlined'
                id: text_field
                size_hint_x: .8
                pos_hint: {'center_x': .5}
                on_text: root.display_search_results(self)
                MDTextFieldHintText:
                    text: 'Search Product'

            RV:
                id: rv_prod_list
                viewclass: 'TwoLineProdImgListItem'




