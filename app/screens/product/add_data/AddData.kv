#: import RV components.components.RV
#: include components/components.kv

<AddDataScreen>:
    name: 'add_data_scr'
    MDFloatLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .375}
            size_hint: .85, .90
            spacing: dp(20)

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height

                SelectDataScreenButton:
                    id: category_btn
                    text: 'Categories'
                    on_release: root.switch_scr(self)

                Spacer:
                    orientation: 'horizontal'
                    value: self.parent.width * 0.01

                SelectDataScreenButton:
                    id: unit_btn
                    text: 'Units'
                    on_release: root.switch_scr(self)

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height
                spacing: dp(20)
                MDTextField:
                    text: 'test'

                MDFloatingActionButton:
                    icon: 'plus-thick'
                    type: 'small'
                    md_bg_color: app.theme_cls.primary_color

            MDScreenManager:
                id: data_manager
                CategoryScr:
                UnitScr:

            MDLabel:
                text: ''
                size_hint_y: .25


<SelectDataScreenButton@MDRectangleFlatButton>:
    radius: [0, 0, 0, 0]
    line_color: app.theme_cls.primary_dark
    size_hint_x: None
    width: self.parent.width * 0.49
    md_bg_color_disabled: app.theme_cls.primary_light
    font_style: 'Body2'
    disabled_color: 'black'
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color


<CategoryScr>:
    name: 'category_scr'
    MDFloatLayout:
        RV:
            viewclass: 'OneLineListItem'
            id: rv_category

<UnitScr>:
    name: 'unit_scr'
    MDFloatLayout:
        RV:
            viewclass: 'OneLineListItem'
            id: rv_unit
