<AddDataScreen>:
    name: 'add_data_scr'
    MDFloatLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: .85, .70

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[0].height

                SelectListScreenButton:
                    text: 'Categories'

                Spacer:
                    orientation: 'horizontal'
                    value: self.parent.width * 0.01

                SelectListScreenButton:
                    text: 'Units'


            MDScreenManager:
                id: collections_manager


<SelectListScreenButton@MDRectangleFlatButton>:
    radius: [0, 0, 0, 0]
    line_color: app.theme_cls.primary_dark
    size_hint_x: None
    width: self.parent.width * 0.49
    md_bg_color_disabled: app.theme_cls.primary_light
    font_style: 'Body2'
    disabled_color: 'black'
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color

