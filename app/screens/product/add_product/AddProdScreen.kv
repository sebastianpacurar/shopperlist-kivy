#: import DropdownMenu components.components.DropdownMenu

<AddProdScreen>:
    name: 'add_prod_scr'
    MDFloatLayout:
        CustomTextField:
            id: product_name_text
            pos_hint: {'center_x': .5, 'y': .75}
            hint_text: 'Name'
            on_text: app.validate_text_field(self)

        CustomTextField:
            id: product_price_text
            pos_hint: {'center_x': .5, 'y': .60}
            hint_text: 'Price'
            input_type: 'number'
            input_filter: 'float'
            on_text: app.validate_text_field(self)

        CustomTextField:
            id: product_unit_text
            pos_hint: {'center_x': .5, 'y': .30}
            hint_text: 'Unit'
            on_focus: if self.focus: DropdownMenu().drop(self)

        CustomTextField:
            id: product_category_text
            pos_hint: {'center_x': .5, 'y': .45}
            hint_text: 'Category'
            on_focus: if self.focus: DropdownMenu().drop(self)


<CustomTextField@MDTextField>:
    size_hint: .5, None
    height: dp(20)
    helper_text: 'Cannot be empty'
    multiline: False
    write_tab: False
