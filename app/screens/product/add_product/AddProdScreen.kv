#: import DropdownMenu app.components.components.DropdownMenu
#: import DropTextField app.components.components.DropTextField


<AddProdScreen>:
    name: 'add_prod_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(30)

            SimpleTextField:
                id: product_name_text
                hint_txt: 'Name'

            SimpleTextField:
                id: product_price_text
                hint_txt: 'Price'
                input_type: 'number'
                input_filter: 'float'

            DropTextField:
                id: product_unit_text
                hint_txt: 'Unit'

            DropTextField:
                id: product_category_text
                hint_txt: 'Category'

            MDIconButton:
                pos_hint: {'center_x': .5}
                icon: 'plus-thick'
                style: 'filled'
                on_release: root.perform_product_add()

            Widget:

        BottomGap:



