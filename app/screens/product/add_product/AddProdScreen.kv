#: import DropdownMenu components.components.DropdownMenu


<AddProdScreen>:
    name: 'add_prod_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(30)

            SimpleTextField:
                id: product_name_text
                hint_txt: 'Name'
                on_text: app.validate_text_field(self)

            SimpleTextField:
                id: product_price_text
                hint_txt: 'Price'
                input_type: 'number'
                input_filter: 'float'
                on_text: app.validate_text_field(self)

            SimpleTextField:
                id: product_unit_text
                hint_txt: 'Unit'
                on_focus: if self.focus: DropdownMenu().drop(self)

            SimpleTextField:
                id: product_category_text
                hint_txt: 'Category'
                on_focus: if self.focus: DropdownMenu().drop(self)

            MDIconButton:
                pos_hint: {'center_x': .5}
                icon: 'plus-thick'
                style: 'filled'
                on_release: root.perform_product_add()

            Widget:

        BottomGap:



