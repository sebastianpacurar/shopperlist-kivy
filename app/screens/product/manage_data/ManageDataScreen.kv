#: import PROD_CATEGORIES_SCR utils.constants.PROD_CATEGORIES_SCR
#: import PROD_UNITS_SCR utils.constants.PROD_UNITS_SCR

<ManageDataScreen>:
    name: 'add_data_scr'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20), 0, dp(20), 0

        TopGap:
            top_bar_height: root.top_bar_height

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)

            MDSegmentedButton:
                type:'small'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(PROD_CATEGORIES_SCR)
                    active: True
                    MDSegmentButtonLabel:
                        text: 'Category'
                MDSegmentedButtonItem:
                    on_release: root.switch_scr(PROD_UNITS_SCR)
                    MDSegmentButtonLabel:
                        text: 'Unit'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.children[1].height
                spacing: dp(20)

                MDTextField:
                    id: text_field
                    mode: 'outlined'
                    MDTextFieldHintText:
                        text: 'Add item'

                MDIconButton:
                    id: add_btn
                    icon: 'plus-thick'
                    style: 'filled'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: root.add_entity()

            SimpleTextField:
                id: search_field
                on_text: root.filter_displayed_list(self)
                hint_txt: 'Search Item'
                MDTextFieldTrailingIcon:
                    icon: 'text-search'

            MDScreenManager:
                id: data_manager
                CategoriesScreen:
                UnitsScreen:

        BottomGap:


<CategoriesScreen>:
    name: 'categories_scr'
    MDBoxLayout:
        RV:
            viewclass: 'EditableOneLineItemList'
            id: rv_categories

<UnitsScreen>:
    name: 'units_scr'
    MDBoxLayout:
        RV:
            viewclass: 'EditableOneLineItemList'
            id: rv_units
