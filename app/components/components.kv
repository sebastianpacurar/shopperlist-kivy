<RV>:
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(72)
        default_size_hint: 1, None
        color: (0, 0.7, 0.4, 0.8)
        size_hint_y: None
        height: self.minimum_height


<SimpleTextField>:
    multiline: False
    write_tab: False
    MDTextFieldHintText:
        text: root.hint_txt
    MDTextFieldHelperText:
        text: root.helper_txt
        mode: 'on_error'


<DropTextField>:
    multiline: False
    write_tab: True
    on_text: (root.text_validate())
    on_focus: root.on_focus_event()
    MDTextFieldHintText:
        text: root.hint_txt


<PasswordField>:
    size_hint_y: None
    size: text_field.size
    MDTextField:
        id: text_field
        mode: root.field_mode
        multiline: False
        write_tab: False
        on_text: root.save_text_value(self)
        MDTextFieldHintText:
            text: root.hint_txt
        MDTextFieldLeadingIcon:
            icon: 'key-variant'
    MDIconButton:
        icon: 'eye'
        pos_hint: {'right': 1, 'center_y': .5}
        on_release: root.toggle_visibility(self, text_field)


<TopGap>:
    size_hint_y: None
    height: root.top_bar_height + root.top_bar_height * .25
    minimum_size: self.size


<BottomGap>
    size_hint_y: None
    height: dp(24 * 2)
    minimum_size: self.size


<EditableTwoLineItemList>:
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: 'dots-vertical'
        pos_hint: {'center_y': .5}
        on_release: root.sheet_func()


<ProdItemWithImg>:
    ripple_scale: 0
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline


<SelectableProdItemWithImg>:
    ripple_scale: 0
    MDIconButton:
        icon: 'dots-vertical'
        on_release: root.sheet_func()
        pos_hint: {'center_y': .5}
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDListItemTertiaryText:
        text: root.tertiary
    MDIconButton:
        icon: root.itm_icon
        on_release: root.checkbox_func()
        pos_hint: {'center_y': .5}


<TwoLineProdImgListItem>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: 'dots-vertical'
        pos_hint: {'center_y': .5}
        on_release: root.icon_func(root)


<BottomSheetHandleContainer>:
    drag_handle_color: app.theme_cls.primaryColor
    MDBottomSheetDragHandleTitle
        text: root.title
        theme_font_size: 'Custom'
        font_size: sp(20)
        pos_hint: {'center_x': .5, 'center_y': 0}
    MDBottomSheetDragHandleButton:
        pos_hint: {'center_x': .5, 'center_y': 0}
        icon: 'close'
        on_release: app.close_bottom()


<BottomSheetSelectionLineItem>:
    theme_bg_color: 'Custom'
    md_bg_color: 'gainsboro'
    MDListItemHeadlineText:
        text: root.text


<BottomSheetItemDescription>:
    orientation: 'horizontal'
    size_hint_y: None
    height: img.height
    padding: dp(10)
    FitImage:
        id: img
        source: root.img_path
        size_hint: None, None
        size: dp(96), dp(96)
        radius: dp(18), dp(18), dp(18), dp(18)
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: root.category
            font_style: 'Title'
            halign: 'center'
        MDLabel:
            text: root.price
            font_style: 'Title'
            halign: 'center'


<BottomSheetQuantitySelector>:
    orientation: 'horizontal'
    spacing: dp(10)
    padding: dp(10)
    size_hint_y: None
    height: dp(48)
    MDBoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)
        MDIconButton:
            id: decrease_btn
            icon: 'minus'
            style: 'filled'
            disabled: root.decrease_btn_disabled
            on_release: root.decrease_quantity_val()
        MDLabel:
            text: str(int(root.quantity_val))
            size_hint: None, None
            width: dp(48)
            height: increase_btn.height
            halign: 'center'
            radius: [24, 24, 24, 24]
            md_bg_color: 'white'
        MDIconButton:
            id: increase_btn
            icon: 'plus'
            style: 'filled'
            on_release: root.increase_quantity_val()
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: 0, 0, 0, dp(5)
        MDLabel:
            halign: 'center'
            text: 'Total Price'
            theme_font_size: 'Custom'
            font_size: sp(16)
        MDLabel:
            halign: 'center'
            text: f'{round(root.price_val, 2)} $'
            theme_font_size: 'Custom'
            font_size: sp(18)
    MDIconButton:
        id: apply_btn
        style: 'filled'
        icon: 'check-bold'
        disabled: root.apply_btn_disabled
        on_release: root.apply_quantity_func(root.quantity_val)


<DynamicDialog>:
    size_hint_x: .95
    MDDialogHeadlineText:
        text: root.headline
    MDDialogSupportingText:
        text: root.supporting
    MDDialogButtonContainer:
        Widget:
        MDButton:
            style: 'text'
            on_release: root.dismiss()
            MDButtonText:
                text: root.cancel_txt
        MDButton:
            style: 'text'
            on_release: root.confirm()
            MDButtonText:
                text: root.accept_txt


<AddShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List Name'


<RenameShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List New Name'


<RenameCategoryContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'Category Name'


<RenameUnitContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'Unit Name'