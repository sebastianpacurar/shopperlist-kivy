<RV>:
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(72)
        default_size_hint: 1, None
        color: (0, 0.7, 0.4, 0.8)
        size_hint_y: None
        height: self.minimum_height


<EditableTwoLineItemList>:
    MDListItemTrailingIcon:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting


<EditableThreeLineItemList>:
    MDListItemTrailingIcon:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDListItemTertiaryText:
        text: root.tertiary


<ProdItemWithImg>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline


<TwoLineProdImgListItem>:
    on_release: root.icon_func(root)
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDListItemTrailingIcon:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}


<AddShoppingListContent>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(120)
    MDLabel:
        theme_text_color: 'Custom'
        text_color: app.theme_cls.primary_dark
        text: 'Add Shopping List'
        pos_hint: {'top': 1, 'left': 1}
    Spacer:
        orientation: 'vertical'
        value: dp(35)
    MDTextField:
        id: shop_list_name_text
        pos_hint: {'left': 1, 'y': 0}
        mode: 'rectangle'
        hint_text: 'Shop List Name'
        helper_text_mode: 'on_error'
        required: True
        multiline: False
        on_text: app.validate_text_field(self)


<MySnackbar>:
    pos_hint: {'center_x': .5}
    MDLabel:
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: sp(15)
        bold: True
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}
    MDSnackbarCloseButton:
        icon: 'close-thick'
        on_release: root.dismiss_sb()

