<RV>:
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(72)
        default_size_hint: 1, None
        color: (0, 0.7, 0.4, 0.8)
        size_hint_y: None
        height: self.minimum_height


<SimpleTextField>:
    multiline: False
    write_tab: False
    MDTextFieldHintText:
        text: root.hint_txt
    MDTextFieldHelperText:
        text: root.helper_txt
        mode: 'on_error'


<PasswordField>:
    size_hint_y: None
    size: text_field.size
    MDTextField:
        id: text_field
        mode: root.field_mode
        multiline: False
        write_tab: False
        on_text: root.save_text_value(self)
        MDTextFieldHintText:
            text: root.hint_txt
        MDTextFieldLeadingIcon:
            icon: "key-variant"
    MDIconButton:
        icon: 'eye'
        pos_hint: {'right': 1, 'center_y': .5}
        on_release: root.toggle_visibility(self, text_field)


<EditableOneLineItemList>:
    MDListItemHeadlineText:
        text: root.text
    MDIconButton:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
        on_release: root.sheet_func(root.text, root.itm_id)


<EditableTwoLineItemList>:
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
        on_release: root.sheet_func(root.headline, root.itm_id)


<EditableThreeLineItemList>:
    MDListItemTrailingIcon:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDListItemTertiaryText:
        text: root.tertiary


<ProdItemWithImg>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline


<TwoLineProdImgListItem>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
        on_release: root.icon_func(root)


<BottomSheetHandleContainer>:
    drag_handle_color: app.theme_cls.primaryColor
    MDBottomSheetDragHandleTitle
        text: root.title
        theme_font_size: 'Custom'
        font_size: sp(20)
        pos_hint: {'center_x': .5, 'center_y': 0}
    MDBottomSheetDragHandleButton:
        pos_hint: {'center_x': .5, 'center_y': 0}
        icon: "close"
        on_release: app.close_bottom()


<BottomSheetSelectionLineItem>:
    theme_bg_color: 'Custom'
    md_bg_color: 'gainsboro'
    MDListItemHeadlineText:
        text: root.text


<DynamicDialog>:
    size_hint_x: .95
    MDDialogHeadlineText:
        text: root.headline
    MDDialogSupportingText:
        text: root.supporting
    MDDialogButtonContainer:
        Widget:
        MDButton:
            style: 'text'
            on_release: root.dismiss()
            MDButtonText:
                text: root.cancel_txt
        MDButton:
            style: 'text'
            on_release: root.confirm()
            MDButtonText:
                text: root.accept_txt


<AddShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List Name'


<RenameShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List New Name'


<RenameCategoryContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'Category Name'


<RenameUnitContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'Unit Name'