<RV>:
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(72)
        default_size_hint: 1, None
        color: (0, 0.7, 0.4, 0.8)
        size_hint_y: None
        height: self.minimum_height

<OneLineItem>:
    MDListItemSupportingText:
        text: root.supporting

<EditableTwoLineItemList>:
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
        on_release: app.toggle_bottom(root.headline, root.itm_id)


<EditableThreeLineItemList>:
    MDListItemTrailingIcon:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDListItemTertiaryText:
        text: root.tertiary


<ProdItemWithImg>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline


<TwoLineProdImgListItem>:
    MDListItemLeadingAvatar:
        source: root.img_path
    MDListItemHeadlineText:
        text: root.headline
    MDListItemSupportingText:
        text: root.supporting
    MDIconButton:
        icon: root.itm_icon
        pos_hint: {'center_y': .5}
        on_release: root.icon_func(root)

<BottomSheetHandleContainer>:
    drag_handle_color: app.theme_cls.primaryColor
    MDBottomSheetDragHandleTitle
        text: root.title
        theme_font_size: 'Custom'
        font_size: sp(20)
        pos_hint: {'center_x': .5, 'center_y': .75}

    MDBottomSheetDragHandleButton:
        icon: "close"
        on_release: app.toggle_bottom(self)

<BottomSheetContent>:


<MyDialog>:
    MDDialogHeadlineText:
        text: root.headline
    MDDialogSupportingText:
        text: root.supporting
    MDDialogButtonContainer:
        MDButton:
            style: 'text'
            on_release: root.dismiss()
            MDButtonText:
                text: 'Cancel'
        MDButton:
            style: 'text'
            on_release: root.confirm()
            MDButtonText:
                text: root.accept_txt

<AddShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List Name'
        MDLabel:
            text: ''

<RenameShoppingListContent>:
    MDTextField:
        id: text_field
        MDTextFieldHintText:
            text: 'List New Name'
        MDLabel:
            text: ''

